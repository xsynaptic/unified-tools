{
  "name": "@xsynaptic/unified-tools",
  "version": "2.0.2",
  "description": "A common set of tools for transforming and manipulating markup and text",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "build-tsc": "tsc --build",
    "check-types": "tsc --project tsconfig.json --noemit",
    "lint": "eslint",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xsynaptic/unified-tools.git"
  },
  "keywords": [
    "unified",
    "rehype",
    "rehype-plugin",
    "remark",
    "remark-plugin"
  ],
  "author": "Alexander Synaptic <x@synapticism.com>",
  "bugs": {
    "url": "https://github.com/xsynaptic/unified-tools/issues"
  },
  "homepage": "https://github.com/xsynaptic/unified-tools#readme",
  "license": "MIT",
  "dependencies": {
    "rehype-parse": "^9.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "rehype-wrap-cjk": "^1.0.8",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-smartypants": "^3.0.2",
    "retext": "^9.0.0",
    "retext-smartypants": "^6.2.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
