{
  "name": "@xsynaptic/unified-tools",
  "version": "0.0.5",
  "description": "A common set of tools for transforming and manipulating markup and text",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build-tsc": "tsc --build",
    "check-types": "tsc --project tsconfig.json --noemit",
    "lint": "eslint",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xsynaptic/unified-tools.git"
  },
  "keywords": [
    "unified",
    "rehype",
    "rehype-plugin",
    "remark",
    "remark-plugin"
  ],
  "author": "Alexander Synaptic <x@synapticism.com>",
  "bugs": {
    "url": "https://github.com/xsynaptic/unified-tools/issues"
  },
  "homepage": "https://github.com/xsynaptic/unified-tools#readme",
  "license": "MIT",
  "dependencies": {
    "rehype-parse": "^9.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "rehype-wrap-cjk": "^0.2.6",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-smartypants": "^3.0.2",
    "retext": "^9.0.0",
    "retext-smartypants": "^6.2.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.28.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
