{
  "name": "@xsynaptic/unified-tools",
  "version": "0.0.3",
  "description": "A common set of tools for transforming and manipulating markup and text",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build-tsc": "tsc --build",
    "check-types": "tsc --project tsconfig.json --noemit",
    "lint": "eslint",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xsynaptic/unified-tools.git"
  },
  "keywords": [
    "unified",
    "rehype",
    "rehype-plugin",
    "remark",
    "remark-plugin"
  ],
  "author": "Alexander Synaptic <x@synapticism.com>",
  "bugs": {
    "url": "https://github.com/xsynaptic/unified-tools/issues"
  },
  "homepage": "https://github.com/xsynaptic/unified-tools#readme",
  "license": "MIT",
  "dependencies": {
    "rehype-parse": "^9.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "rehype-wrap-cjk": "^0.2.6",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "remark-smartypants": "^3.0.2",
    "retext": "^9.0.0",
    "retext-smartypants": "^6.2.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "eslint": "^9.22.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6"
}
